{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "run-server": "node dist/index.js",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "db:reset:dev": "docker exec fitcoach-db psql -U postgres -c \"DROP DATABASE IF EXISTS fitcoach_dev WITH (FORCE);\" && docker exec fitcoach-db psql -U postgres -c \"CREATE DATABASE fitcoach_dev;\"",
    "db:reset:prod": "docker exec fitcoach-db psql -U postgres -c \"DROP DATABASE IF EXISTS fitcoach_prod WITH (FORCE);\" && docker exec fitcoach-db psql -U postgres -c \"CREATE DATABASE fitcoach_prod;\"",
    "drizzle:push": "NODE_ENV=test drizzle-kit push",
    "drizzle:generate": "NODE_ENV=test drizzle-kit generate",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:reset": "NODE_ENV=test drizzle-kit drop && NODE_ENV=test drizzle-kit push",
    "db:clean": "NODE_ENV=test tsx src/db/clean.ts",
    "db:check": "NODE_ENV=test tsx src/db/check.ts",
    "build": "rimraf dist && tsup src/index.ts --format esm --dts --sourcemap --out-dir dist --clean",
    "start": "node --env-file=.env.production dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "jest": "^30.1.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsup": "^8.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@langchain/core": "^0.3.72",
    "@langchain/openai": "^0.6.9",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.1.0",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.5"
  }
}
